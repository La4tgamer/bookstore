<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.whu.bookstore.dao.ShoppingCartMapper">
    <select id="selectByUser" resultType="com.whu.bookstore.entity.ShoppingCart">
        select * from shopping_cart
        where username = #{username}
        order by num
    </select>

    <insert id="insertGoods">
        insert into shopping_cart (uuid,username,book_id,num,single_price)
        values (#{uuid},#{username},#{bookId},#{num},#{singlePrice})
    </insert>

</mapper>